<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/miaplicacion"
    android:background="@drawable/fondo1"
    android:nestedScrollingEnabled="false"
 >

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical"
        android:id="@+id/scrollView">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingRight="5px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:orientation="vertical">

             <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Administrador"
                android:id="@+id/textView"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textColor="#ffffffff"
                android:textSize="40dp"
                android:textStyle="bold|italic"
                 android:layout_gravity="center_horizontal" />
             <TextView
                android:layout_width="304dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Consultar Productos"
                android:id="@+id/textView2"
                android:textColor="#ffffffff"
                android:textSize="30dp"
                android:textStyle="bold|italic"
                android:layout_below="@+id/scrollView"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="277dp"
                android:layout_marginTop="73dp"
                 android:gravity="center" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton"
                android:src="@drawable/res1"
                android:visibility="visible"
                android:tintMode="src_atop"
                android:background="#01ffffff"
                android:layout_below="@+id/textView"
                android:layout_alignParentStart="true"
                android:onClick="consumirServiciorest"
                android:longClickable="true"
                android:layout_gravity="center_horizontal" />
            <TextView
                android:layout_width="257dp"
                android:layout_height="46dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Consultar Clientes"
                android:id="@+id/textView3"
                android:textStyle="bold|italic"
                android:textColor="#ffffffff"
                android:textSize="30dp"
                android:gravity="center|center_horizontal" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/consultaClientes"
                android:onClick="consumirServiciorestClientes"
                android:src="@drawable/cliente"
                android:background="#00ffffff"
                android:layout_above="@+id/textoServicio"
                android:layout_alignParentStart="true"
                android:longClickable="true"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Total De Ventas"
                android:id="@+id/textView4"
                android:textColor="#fffcfffd"
                android:textStyle="bold|italic"
                android:textSize="30dp"
                />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/imageButton2"
                android:src="@drawable/ventas"
                android:background="#00ffffff"
                android:layout_below="@+id/textView"
                android:layout_alignEnd="@+id/imageButton3"
                android:onClick="consumirServiciorestTotalVentas"
                android:longClickable="true"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Consultar Meseros"
                android:id="@+id/textView5"
                android:textSize="30dp"
                android:textStyle="bold|italic"
                android:textColor="#ffffffff" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton3"
                android:onClick="consumirServiciorestMeseros"
                android:src="@drawable/mesero"
                android:background="#00ffffff"
                android:layout_above="@+id/textoServicio"
                android:layout_toEndOf="@+id/textoServicio"
                android:longClickable="true"
                android:layout_gravity="center_horizontal" />
            <TextView
                android:layout_width="304dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Iva Recaudado"
                android:id="@+id/textView8"
                android:textColor="#ffffffff"
                android:textSize="30dp"
                android:textStyle="bold|italic"
                android:layout_below="@+id/scrollView"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="277dp"
                android:layout_marginTop="20dp"
                />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton6"
                android:src="@drawable/iva"
                android:visibility="visible"
                android:tintMode="src_atop"
                android:background="#01ffffff"
                android:layout_below="@+id/textView"
                android:layout_alignParentStart="true"
                android:onClick="consumirServiciorestIvaRecaudado"
                android:longClickable="true"
                android:layout_gravity="center_horizontal" />
            <TextView
                android:layout_width="304dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Gusto Musical"
                android:id="@+id/textView7"
                android:textColor="#ffffffff"
                android:textSize="30dp"
                android:textStyle="bold|italic"
                android:layout_below="@+id/scrollView"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="277dp"
                android:layout_marginTop="15dp"
                android:onClick="consumirServiciorestgustomusical" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton5"
                android:src="@drawable/musica2"
                android:visibility="visible"
                android:tintMode="src_atop"
                android:background="#01ffffff"
                android:layout_below="@+id/textView"
                android:layout_alignParentStart="true"
                android:onClick="consumirServiciorestgustomusical"
                android:longClickable="true"
                android:layout_gravity="center_horizontal" />
            <TextView
                android:layout_width="304dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Producto Mas Vendido"
                android:id="@+id/textView9"
                android:textColor="#ffffffff"
                android:textSize="30dp"
                android:textStyle="bold|italic"
                android:layout_below="@+id/scrollView"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="277dp"
                android:layout_marginTop="15dp"
                />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton9"
                android:src="@drawable/producto"
                android:visibility="visible"
                android:tintMode="src_atop"
                android:background="#01ffffff"
                android:layout_below="@+id/textView"
                android:layout_alignParentStart="true"
                android:onClick="consumirServiciorestProductoMasVendido"
                android:longClickable="true"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="304dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Mejor Mesero"
                android:id="@+id/textView10"
                android:textColor="#ffffffff"
                android:textSize="30dp"
                android:textStyle="bold|italic"
                android:layout_below="@+id/scrollView"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="277dp"
                android:layout_marginTop="15dp"
                />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton10"
                android:src="@drawable/mejor"
                android:visibility="visible"
                android:tintMode="src_atop"
                android:background="#01ffffff"
                android:layout_below="@+id/textView"
                android:layout_alignParentStart="true"
                android:onClick="consumirServiciorestMejormesero"
                android:longClickable="true"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="304dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Consultar Despachadores"
                android:id="@+id/textView11"
                android:textColor="#ffffffff"
                android:textSize="30dp"
                android:textStyle="bold|italic"
                android:layout_below="@+id/scrollView"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="277dp"
                android:layout_marginTop="15dp"
                />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton11"
                android:src="@drawable/despacho"
                android:visibility="visible"
                android:tintMode="src_atop"
                android:background="#01ffffff"
                android:layout_below="@+id/textView"
                android:layout_alignParentStart="true"
                android:onClick="consumirServiciorestConsultardespachador"
                android:longClickable="true"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="304dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Consultar Numero de Ventas"
                android:id="@+id/textView15"
                android:textColor="#ffffffff"
                android:textSize="30dp"
                android:textStyle="bold|italic"
                android:layout_below="@+id/scrollView"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="277dp"
                android:layout_marginTop="15dp"
                />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton15"
                android:src="@drawable/sales"
                android:visibility="visible"
                android:tintMode="src_atop"
                android:background="#01ffffff"
                android:layout_below="@+id/textView"
                android:layout_alignParentStart="true"
                android:onClick="consumirServiciorestNumeroVentas"
                android:longClickable="true"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textoServicio"
                android:gravity="center_horizontal"
                android:textColor="#fefef9ff"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:nestedScrollingEnabled="false"
                android:maxHeight="500dp" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
