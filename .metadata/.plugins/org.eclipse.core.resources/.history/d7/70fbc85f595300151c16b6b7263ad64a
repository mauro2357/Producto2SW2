package Presentacion;

import java.util.ArrayList;

import Datos.FacturaRepository;
import Negocio.geraciondefactura.Factura;

public class generaciondefacturaFacade {
	
	public static ArrayList<Factura> listafacturas;
	public static ArrayList<Factura> listafacturas_enespera;
	
	public void main() throws Exception{
		FacturaRepository facturarepository = new FacturaRepository();
		listafacturas = facturarepository.generarfactura();
		if(listafacturas_enespera==null) listafacturas_enespera = new ArrayList<Factura>();
		for(Factura factura: listafacturas){
			if(factura.getEstado().equalsIgnoreCase("En espera")) listafacturas_enespera.add(factura); 
		}
	}

	public static ArrayList<Factura> getListafacturas() {
		return listafacturas;
	}

	public static void setListafacturas(ArrayList<Factura> listafacturas) {
		generaciondefacturaFacade.listafacturas = listafacturas;
	}

	public ArrayList<Factura> getListafacturas_enespera() {
		return listafacturas_enespera;
	}

	public static void setListafacturas_enespera(ArrayList<Factura> listafacturas_enespera) {
		generaciondefacturaFacade.listafacturas_enespera = listafacturas_enespera;
	}
	
	
	
}
