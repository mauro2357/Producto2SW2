				System.out.print("llegó2");
				System.out.println(producto.getCodigo());
					System.out.println("comparando con");
					System.out.println(auxproducto.getCodigo());
				if(producto.getCodigo().equalsIgnoreCase(auxproducto.getCodigo())){
					visitados.add(auxproducto.getCodigo());
					System.out.print("llegó3");
					aux++;
				}
			}%>
