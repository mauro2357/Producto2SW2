package tomaynotificacionpedidos;

import org.junit.Assert;

import cucumber.api.java.en.Given;
import cucumber.api.java.en.Then;
import cucumber.api.java.en.When;

public class elmeseroconsultaproductosyencuentraunlistadodeeellosStepDefinitions {
	
	Mesero mesero = null;
	
	@Given("^El mesero va a consultar los productos.$")
	public void El_mesero_va_a_consultar_los_productos() throws Throwable { 
		mesero = new Mesero();
	}

	@When("^Hay productos.$")
	public void Hay_productos() throws Throwable {
	    mesero.consultarproductos();
	    Assert.assertTrue(true,mesero.getProductos().size()>0);
	}
	
	@Then("^Notificar qué productos hay para vender.$")
	public void Notificar_que_productos_hay_para_vender() throws Throwable {
	    Assert.assertEquals("Hay estos productos: ", mesero.getProductos());
	}

}
